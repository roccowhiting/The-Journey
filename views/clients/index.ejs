<%- include('../partials/header') %>

    <h1>Appointments</h1>
    <table>
        <thead>
            <th>Date</th>
            <th>Workout</th>
            <th>Trainer</th>
        </thead>
        <tbody>
            <% clients.forEach(client => { %>
                <tr>
                    <td><%= client.date %></td>
                    <td><%= client.workout %></td>
                    <td><%= client.trainer %></td>
                    <td>
                        <a href="/clients/<%= client._id %>/edit">Edit</a>
                    </td>
                    <td>
                        <form action="/clients/<%= client._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="delete">
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

<%- include('../partials/footer') %>    