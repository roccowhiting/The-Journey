<%- include('../partials/header') %>
    <h1>Schedule here!</h1>
    <form action="/clients" method="POST">
        <label>Date:
            <input type="datetime-local"  id="session-time" 
            name="departs" value="2022-01-01T12:30"
            min="2022-01-01T12:01">
        </label>
        <label>Workout:
            <input type="text" name="workout">
        </label>
        <label>Trainer:
            <select name="trainer">
                <option value="Power Lifting">Power Lifting</option>
                <option value="Body Building">Body Building</option>
                <option value="HIIT">HIIT</option>
            </select>
        </label>
        <input type="submit" value="Schedule">
    </form>

